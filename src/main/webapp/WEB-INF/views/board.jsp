        let showList = function (bno) {
            $.ajax({
                type:'GET',       // ÏöîÏ≤≠ Î©îÏÑúÎìú
                url: '/NCinside/comments?bno='+bno,  // ÏöîÏ≤≠ URI
                success : function(result){
